<%= form_for(:flight, url: flight_path, method: :get) do |f| %>

  <%= f.label :start_id, "From:" %><br>
  <%= f.collection_select(:start_id, Airport.all, :code, :name) %><br>

  <%= f.label :finish_id, "To:"%><br>
  <%= f.collection_select(:finish_id, Airport.all, :code, :name) %><br>

  <%= f.label :depart, "Date:"%><br>
  <%= f.collection_select(:depart, Flight.all, :itself, :depart) %><br>

  <%= f.submit "Search" %>
<%end%>
